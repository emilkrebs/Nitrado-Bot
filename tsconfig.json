{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "lib": ["ESNext"],
      "sourceMap": true,
      "outDir": "dist",
      "strict": true,
      "noUnusedLocals": true,
      "noImplicitReturns": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
       "src/**/*.ts",
       "config.json"
    ],
    "exclude": [
       "dist",
       "node_modules"
    ]
  }
